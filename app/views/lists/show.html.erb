<div class="banner" style="background-image: url(<%= @list.image_url ? @list.image_url : 'https://images.unsplash.com/photo-1542204165-65bf26472b9b?q=80&w=1974&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D' %>)";>
  <div class="container">
    <h1> <%= @list.name %> </h1>
  </div>
</div>

<ul class="list-group">
<% @list.bookmarks.each do |bookmark| %>
<li class="list-group-item"><%= bookmark.movie.title %> -
<%= bookmark.comment %>
<%= link_to 'Delete this movie', bookmark_path(bookmark), data: { turbo_method: :delete, turbo_confirm: 'Are you SURE?'}, class: 'btn btn-danger'%>
</li>
<% end %>
</ul>

<%= link_to 'Add a movie', new_list_bookmark_path(@list), class: 'btn btn-primary' %>

<%= link_to 'Back to lists', lists_path, class: 'btn btn-success' %>
